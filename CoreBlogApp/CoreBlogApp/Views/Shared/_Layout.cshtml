<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bicon/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>

    <div class="navbar navbar-expand bg-white shadow-sm">
        <div class="container">
            <a href="/posts" class="navbar-brand">
                <i class="bi bi-code"></i> BlogApp
            </a>
            <ul class="navbar-nav ms-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/posts/list" class="nav-link">Postlar</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/logout" class="nav-link">Çıkış</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/users/Login" class="nav-link">Giriş</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/Register" class="nav-link">Kayıt Ol</a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="container mt-3">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false);
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>