@model List<Tag>
<div class="card mb-3">
    <div class="card-header">
        <h5 class="card-title mb-0">Tags</h5>
    </div>
    <div class="card-body">
        <ul class="list-inline d-flex-wrap gap-2">
            @foreach (var tag in Model)
            {
                <li class="list-inline-item">
                    <a href="/posts/tag/@tag.TagUrl" class="btn btn-outline-secondary btn-sm mb-2">@tag.TagText</a>
                </li>
            }
    </div>
    </ul>
</div>